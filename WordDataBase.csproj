<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Метаданные для NuGet пакета -->
		<PackageId>SimpleTextDatabase</PackageId>
		<!-- Уникальный идентификатор пакета -->
		<Version>1.0.0</Version>
		<!-- Версия пакета -->
		<Authors>Ronald Ryan</Authors>
		<!-- Автор пакета -->
		<Company>Teach Tea Studio</Company>
		<!-- Компания, разработавшая пакет -->
		<Description>A simple text-based database with basic functionality.</Description>
		<!-- Описание пакета -->
		<PackageTags>text database orm</PackageTags>
		<!-- Теги для поиска пакета -->
		<Copyright>Copyright © Teach Tea Studio 2024</Copyright>
		<!-- Авторское право -->

		<!-- Путь к файлу значка относительно корневого каталога проекта -->
		<PackageIcon>database.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
		<!-- Включите файл значка в пакет -->
		<None Include="database.png" Pack="true" PackagePath="\" />
	</ItemGroup>

</Project>
